    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="#FF6200EE"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Mie Goreng" />

            <TextView
                android:id="@+id/detail_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_judul"
                android:layout_centerHorizontal="true"
                android:textColor="#FF6200EE"
                android:textSize="20sp"
                tools:text="Rp.20.000" />

            <ImageView
                android:id="@+id/detail_cover"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_below="@id/detail_harga"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/miegoreng" />

            <EditText
                android:id="@+id/detail_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_tambah"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/detail_jumlah"
                android:text="+"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btn_kurang"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_cover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_toStartOf="@id/detail_jumlah"
                android:text="-"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnPesan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_jumlah"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Pesan"

                />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>